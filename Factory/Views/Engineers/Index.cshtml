@{
	Layout = "_Layout";
}

@using Factory.Models;

<div class="container">
	<h1 class="jumbotron">List of Engineers</h1>

	@if (@Model.Count == 0)
	{
		<h3>No Engineers have been added yet!</h3>
	}
	else
	{
		List<Engineer> engineerList = new List<Engineer>();
		@foreach (Engineer engineer in Model)
		{
			engineerList.Add(engineer);
		}
		List<Engineer> SortedList = engineerList.OrderBy(engineer => engineer.DateHired).ToList();
		<ul class="row">
			@foreach (Engineer e in SortedList)
			{
			<li id="engineer">@Html.ActionLink($"{e.Name}", "Details", new { id = e.EngineerId }) | Date Hired:
				@e.DateHired</li>
			}
		</ul>
	}

	<p id="link">@Html.ActionLink("Add new Enginnner", "Create")</p>
</div>