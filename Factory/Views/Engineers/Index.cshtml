@{
    Layout = "_Layout";
}

@using Factory.Models;

<div class="container">
    <h1 class="jumbotron">List of Engineers</h1>

    @if (@Model.Count == 0)
    {
        <h3>No Engineers have been added yet!</h3>
    }
    else
    {
        <ul class="row">
            @foreach (Engineer engineer in Model)
            {
                <li id="engineer">@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId }) | Date Hired:
                    @engineer.DateHired</li>
            }
        </ul>
    }

    <p id="link">@Html.ActionLink("Add new Enginnner", "Create")</p>
</div>