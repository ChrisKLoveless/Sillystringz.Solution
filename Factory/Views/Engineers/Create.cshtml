@{
    Layout = "_Layout";
}

@model Factory.Models.Engineer;

<h1 id="welcome-header"><img src="https://img.icons8.com/color/128/gears.png">Add new Engineer</h1>

<hr>

<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
<p>@Html.ValidationMessageFor(model => model.DateHired, "", new { @class = "text-danger", @style = "font-weight: 600;"})</p>

<div class="form">
    @using (Html.BeginForm())
    {
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name)<br>

        @Html.LabelFor(model => model.DateHired)
        @Html.EditorFor(model => model.DateHired)<br>
        <input type="submit" value="Create New Engineer" class="btn btn-info mt-5" />
    }
    <hr>
</div>
<p id="link"> @Html.ActionLink("Back to List","Index" )</p>