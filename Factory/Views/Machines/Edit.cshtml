@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h1 id="welcome-header"><img src="https://img.icons8.com/color/128/gears.png">Edit Machine</h1>

<hr>
<div class="form">
  <h4>Name: <em>@Html.DisplayFor(model => model.Name)</em></h4><br>

  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.MachineId)

    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)<br>

    @Html.LabelFor(model => model.LastServiced)
    @Html.EditorFor(model => model.LastServiced)<br>

    <input type="submit" value="Save" class="btn btn-info mt-5" />
  }
  <br>
  <p>@Html.ActionLink("Back to Machine list", "Index")</p>
</div>