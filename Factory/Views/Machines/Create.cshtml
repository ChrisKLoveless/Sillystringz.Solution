@{
  Layout = "_Layout";
}
@using Factory.Models;
@model Factory.Models.Machine;

<h1 id="welcome-header"><img src="https://img.icons8.com/color/128/gears.png">Add new Machine</h1>
<hr>

<div class="form">
  <p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })
  </p>

  @if (@ViewBag.Engineers.Count == 0)
  {
    <h3><em>There are no Engineers. Add an engineer before creating a machine.</em></h3><br>
    <p id="link">@Html.ActionLink("Add new Engineer", "Create", "Engineers")</p>
  }
  else
  {
    @using (Html.BeginForm())
    {
      @Html.LabelFor(model => model.Name)
      @Html.TextBoxFor(model => model.Name)<br>

      @Html.LabelFor(model => model.LastServiced)
      @Html.EditorFor(model => model.LastServiced)<br>

      <input type="submit" value="Create New Machine" class="btn btn-info mt-5" />
    }
  }
  <br>
  <p>@Html.ActionLink("Back to List", "Index")</p>
</div>