@{
  Layout = "_Layout";
}
@using Factory.Models;
@model Factory.Models.Machine;

<h1 class="jumbotron">Add new Machine</h1>

<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@if (@ViewBag.Engineers.Count == 0)
{
  <h3>There are no Engineers. Add an engineer before creating a machine.</h3>
}
else
{
  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)<br>

    @Html.LabelFor(model => model.LastServiced)
    @Html.EditorFor(model => model.LastServiced)<br>

    <input type="submit" value="Create New Machine" class="btn btn-dark" />
  }
}
<br>
<p class="btn btn-dark">@Html.ActionLink("Back to List", "Index")</p>